# =====================================================
# API密钥配置文件 - 请妥善保管，不要提交到版本控制
# =====================================================
# 使用说明：
# 1. 复制此文件为 api_keys.yaml
# 2. 填入你的真实API密钥
# 3. 确保 .gitignore 包含 api_keys.yaml

# ==================== 数据源API ====================

# AKShare - 免费，无需API密钥
akshare:
  api_key: null  # AKShare不需要API密钥

# Tushare - 需要注册并获取token
# 官网：https://tushare.pro/register
tushare:
  token: "YOUR_TUSHARE_TOKEN_HERE"
  # 示例: "1234567890abcdef1234567890abcdef"

# CoinGecko - 免费API
# 官网：https://www.coingecko.com/api/documentation
coingecko:
  api_key: null  # 免费版不需要API密钥
  # Pro版API密钥（可选）
  pro_api_key: "YOUR_COINGECKO_PRO_KEY_HERE"

# Binance - 加密货币交易所API
# 官网：https://www.binance.com/en/my/settings/api-management
binance:
  api_key: "YOUR_BINANCE_API_KEY_HERE"
  secret_key: "YOUR_BINANCE_SECRET_KEY_HERE"

# Alpha Vantage - 美股数据（免费额度有限）
# 官网：https://www.alphavantage.co/support/#api-key
alpha_vantage:
  api_key: "YOUR_ALPHA_VANTAGE_KEY_HERE"

# Yahoo Finance - 通过yfinance使用，无需API密钥
yfinance:
  api_key: null  # yfinance不需要API密钥

# ==================== 通知服务API ====================

# Telegram Bot
# 创建Bot：https://t.me/BotFather
telegram:
  bot_token: "YOUR_TELEGRAM_BOT_TOKEN_HERE"
  # 示例: "1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"
  chat_id: "YOUR_CHAT_ID_HERE"
  # 示例: "987654321"

# Email SMTP
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  username: "your_email@gmail.com"
  password: "your_app_password_here"  # 使用应用专用密码，不是邮箱密码
  sender: "your_email@gmail.com"
  recipients:
    - "recipient1@example.com"
    - "recipient2@example.com"

# 企业微信机器人（可选）
wechat_work:
  webhook_url: "YOUR_WECHAT_WEBHOOK_URL_HERE"

# 钉钉机器人（可选）
dingtalk:
  webhook_url: "YOUR_DINGTALK_WEBHOOK_URL_HERE"
  secret: "YOUR_DINGTALK_SECRET_HERE"

# ==================== 数据库配置 ====================

# PostgreSQL（如果使用）
postgresql:
  host: "localhost"
  port: 5432
  database: "quant_db"
  username: "your_username"
  password: "your_password"

# Redis（如果使用）
redis:
  host: "localhost"
  port: 6379
  password: "your_redis_password"
  db: 0

# ==================== 云服务API（可选） ====================

# AWS
aws:
  access_key_id: "YOUR_AWS_ACCESS_KEY"
  secret_access_key: "YOUR_AWS_SECRET_KEY"
  region: "us-east-1"

# 阿里云
aliyun:
  access_key_id: "YOUR_ALIYUN_ACCESS_KEY"
  access_key_secret: "YOUR_ALIYUN_SECRET_KEY"

# ==================== 其他服务 ====================

# OpenAI（如果要接入GPT做分析）
openai:
  api_key: "YOUR_OPENAI_API_KEY_HERE"
  model: "gpt-4"

# 聚宽（量化回测平台）
joinquant:
  mobile: "YOUR_MOBILE_NUMBER"
  password: "YOUR_PASSWORD"

# ==================== 安全提示 ====================
# 1. 永远不要把包含真实密钥的文件上传到GitHub或其他公开平台
# 2. 定期更换API密钥
# 3. 使用环境变量或密钥管理服务来存储敏感信息
# 4. 限制API密钥的权限（只读权限即可，避免交易权限）
# 5. 监控API使用情况，防止异常调用
